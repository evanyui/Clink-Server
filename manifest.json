{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "Ulink",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs"
    ],

    //recommended
    "description": "Enable user to share and search link with label query",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/index.html"
    },

    //additional
//    "options_page": "html/options.html",
//    "homepage_url": "http://yourdomainhere.com/"
    
    //Dependencies
    "content_scripts": [{
        "js": ["js/index.js"],
        "matches": ["http://*/*", "https://*/*"]
    }]
}
